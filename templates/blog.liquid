<div class="mian-blog-bar">
{% paginate blog.articles by 9 %}

  {%- assign blog_title = blog.title -%}

  {% if current_tags %}
    {% capture blog_title %}{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}{% endcapture %}
  {% endif %}

  <h1>{{ blog_title }}</h1>
    <div class="blog_subtitle_sec">
  {{ blog.metafields.custom.post_date }}
    </div>
    
  {% if blog.all_tags.size > 0 %}
    <h2>{{ 'blogs.general.categories' | t }}</h2>

    <ul>
      {% for tag in blog.all_tags %}

        {% if current_tags contains tag %}
          <li>{{ tag }}</li>
        {% else %}
          <li>{{ tag | link_to_tag: tag }}</li>
        {% endif %}

      {% endfor %}
    </ul>
  {% endif %}


  {% comment %}

  Article Previews
  ====================
  {% endcomment %}
<div class="custm-bolgs">
  {% for article in blog.articles %}
    <div class="cust-blog-sec">
    {% if article.image %}
      <a href="{{ article.url }}">
        {% include 'responsive-image' with
          image: article.image,
          max_width: 1024,
          max_height: 1024
        %}
      </a>
    {% endif %}
    <div class="cust-blog-tilte-bar">
        <h3>
          <a href="{{ article.url }}">{{ article.title }}</a>
        </h3>

         <span class="circle-divider">  <a href="{{ article.url }}">   {{ article.metafields.custom.post_date }}</a></span>
       {% comment %} {% capture date %}{{ article.published_at | time_tag: format: 'date' }}{% endcapture %}
    
        <p>
          {{ 'blogs.article.author_on_date_html' | t: author: article.author, date: date }}
        </p>{% endcomment %}
    </div>

      {% comment %}
    <div class="rte">
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
      {% else %}
        <p>
          {{ article.content | strip_html  }}
        </p>
      {% endif %}
    </div>
    {% endcomment %}
    <div class="arrow-icon">
       <a href="{{ article.url }}">
         <div class="ico-link"></div>
       </a>
    </div>
    {% if blog.comments_enabled? or article.tags.size > 0 %}
      <ul>
        {% if blog.comments_enabled? %}
          <li>
            <a href="{{ article.url }}#comments">
              {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
            </a>
          </li>
        {% endif %}

        {% if article.tags.size > 0 %}
          {% for tag in article.tags %}
            <li>
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
              {% unless forloop.last %}, {% endunless %}
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    {% endif %}

   {% comment %} <p>
      <a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }} &rarr;</a>
    </p>{% endcomment %}
  </div>
  {% endfor %}
</div>
  {% if paginate.pages > 1 %}
    {% include 'pagination' %}
  {% endif %}

{% endpaginate %}
</div>